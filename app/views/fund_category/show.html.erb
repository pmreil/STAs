
<h2>Views of Securities in the <%= @category.name %> Fund Category</h2>

	<h3>Today's views</h3>
  <table class="table table-striped">
  <% @todaysCategoryViews.each do |category| %>
    <tr><td><%= link_to category.security.name, security_path(category.security) %></td><td><%= @todaysCategoryViews.count[category.security_id] %> total views</td></tr>
  <% end %>
  </table>


	<h3>This week's views</h3>
  <table class="table table-striped">
