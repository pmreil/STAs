    <tr><td><%= link_to category.security.name, security_path(category.security) %></td><td><%= @thisWeeksCategoryViews.count[category.security_id] %> total views</td></tr>
  <% end %>
  </table>


	<h3>All time views</h3>
  <table class="table table-striped">
